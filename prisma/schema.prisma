generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card {
  id       String     @id
  name     String
  imageUrl String?
  faces    CardFace[]
  Change   Change[]
   snapshot SnapShot[] @relation("CardToSnapshot")
}

model CardFace {
  cardId   String
  name     String
  imageUrl String?
  card     Card    @relation(fields: [cardId], references: [id], onDelete: Cascade)
  @@id([cardId, name])
}

model User {
  name      String
  username  String
  email     String   @id @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  decks     Deck[]

  @@index([email])
}

model Deck {
  id              String   @id @db.Char(10)
  name            String
  userId          String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  description     String?
  defaultBranchId String  @unique
  defaultBranch   Branch?  @relation(fields: [defaultBranchId], references: [id], name: "defaultBranch")
  branches        Branch[] @relation(name: "branches")
  user            User     @relation(fields: [userId], references: [email], onDelete: Cascade)

  @@index([userId])
}

model Branch {
  id              String   @id @unique @db.Char(10)
  name            String
  defaultBranchOf Deck?    @relation(name: "defaultBranch")
  headCommitId    String?   @unique 
  headCommit      Commit?   @relation(fields: [headCommitId], references: [id], name: "HEAD")
  deckId          String
  deck            Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade, name: "branches")
  commits         Commit[]
}

model Commit {
  id           String   @unique @id @db.Char(10)
  description  String
  createdAt    DateTime @default(now())
  branchId     String
  changes      Change[]
  headBranchOf Branch?  @relation(name: "HEAD")
  branch       Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)
  snapshot     SnapShot?
}

model SnapShot {
  id String @db.Char(10) @id
  commit Commit @relation(fields: [commitID], references: [id])
  commitID String @unique
  card Card[] @relation("CardToSnapshot")
}

model Change {
  action         String
  commitId       String
  cardId         String
  card           Card   @relation(fields: [cardId], references: [id], onDelete: Cascade)
  commit         Commit @relation(fields: [commitId], references: [id], onDelete: Cascade)

  @@id([action, cardId, commitId])
}
